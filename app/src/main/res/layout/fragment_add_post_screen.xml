<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AddPostScreen">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TextView_header"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="Upload Post "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TextView_createPost"
            android:layout_width="229dp"
            android:layout_height="42dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="33dp"
            android:gravity="center_vertical"
            android:text="Add your post description"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="301dp"
            android:layout_below="@+id/TextView_header"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_postpicture" />

        <EditText
            android:id="@+id/editText_PostDescription"
            android:layout_width="380dp"
            android:layout_height="231dp"
            android:layout_below="@+id/TextView_createPost"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_all_corners"
            android:ems="10"
            android:gravity="top"
            android:hint="Description"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:maxWidth="380dp"
            android:maxLines="8"

            android:minLines="3"
            android:padding="8dp" />

        <Button
            android:id="@+id/button_uploadPost"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_below="@+id/editText_PostDescription"
            android:layout_alignEnd="@+id/editText_PostDescription"

            android:layout_marginTop="21dp"

            android:text="Upload" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_Floating_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"

            android:layout_alignParentEnd="true"
            android:layout_gravity="top|right"
            android:layout_marginStart="16dp"

            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="Add"
            android:src="@drawable/ic_wallpaper"
            app:backgroundTint="@color/black"
            app:tint="#eeeee4" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_ImageCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"

            android:layout_alignParentEnd="true"
            android:layout_gravity="top|right"
            android:layout_marginStart="16dp"

            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="Add"
            android:src="@drawable/ic_camera"
            app:backgroundTint="@color/black"
            app:tint="#eeeee4" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_ImageGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"

            android:layout_alignParentEnd="true"
            android:layout_gravity="top|right"
            android:layout_marginStart="16dp"

            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="Add"
            android:src="@drawable/ic_new_imgfolder"
            app:backgroundTint="@color/black"
            app:tint="#eeeee4" />
    </RelativeLayout>
</FrameLayout>