<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.MapScreen">


        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

        <LinearLayout
            android:id="@+id/button_Container"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3"
            >

                <Button
                    android:id="@+id/travelBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="12dp"
                    android:layout_weight="1"
                    android:text="travel"
                    app:iconTint="@color/blueSky"
                    android:textColor="@color/black"
                    android:backgroundTint="#e8eaef"

                    app:icon="@drawable/ic_travel"

                     />

                <Button
                    android:id="@+id/eventBtn"
                    android:layout_width="0dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"

                    app:iconTint="@color/orange"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="12dp"
                    android:layout_weight="1"
                    android:text="event"
                    android:textColor="@color/black"
                    app:icon="@drawable/ic_baseline_fire"
                    android:backgroundTint="#e8eaef"

                    />

                <Button
                    android:id="@+id/sportBtn"
                    android:layout_width="0dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
android:backgroundTint="#e8eaef"

                    app:iconTint="@color/green"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="12dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="sport"
                    app:icon="@drawable/ic_baseline_sports_handball_24"
                    />
        </LinearLayout>




</FrameLayout>