<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.FeedScreen">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_Floating_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="48dp"
            android:contentDescription="Add"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/black"
            app:tint="#eeeee4" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/addPost_Floating_Btn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#eeeee4"
            android:contentDescription="Add"
            android:text="Post"
            app:icon="@drawable/ic_wallpaper"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/addPlan_Floating_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="49dp"
            android:backgroundTint="#eeeee4"
            android:contentDescription="Add"
            android:text="Plan"
            app:icon="@drawable/ic_map" />

        <LinearLayout
            android:id="@+id/upperLayoutGroup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView2"

                android:layout_width="257dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Feed Posts"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@drawable/ic_search"
                android:text="Filter"
                android:textColor="@color/black"
                app:iconTint="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstPostLayout"
            android:layout_width="match_parent"
            android:layout_height="349dp"
            android:layout_below="@+id/upperLayoutGroup"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_first_post">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="67dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/ic_prof1picture_round" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="352dp"
                    android:layout_height="65dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Anastazia"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="190dp"

                android:src="@mipmap/ic_post1picture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/likeBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:text=""
                    android:textColor="@color/black"
                    app:icon="@drawable/ic_celebration"
                    app:iconGravity="textStart"
                    app:iconTint="@color/black"
                    app:tint="@color/black"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/commentBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:text=""
                    android:textColor="@color/black"
                    app:icon="@drawable/ic_baseline_chat_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/black"
                    app:tint="@color/black"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/shareBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:text=""

                    android:textColor="@color/black"
                    app:icon="@drawable/ic_baseline_screen_share_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/black"
                    app:tint="@color/black"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Content of the Post will be here ..."
                android:textSize="16sp" />


        </LinearLayout>




    </RelativeLayout>
</FrameLayout>